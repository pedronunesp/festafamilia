generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rsvp {
  id        Int      @id @default(autoincrement())
  name      String
  attending Boolean
  createdAt DateTime @default(now())
}

model Photo {
  id          String  @id @default(cuid())
  src         String
  alt         String
  description String?
  hint        String?
  isVisible   Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value String
}
